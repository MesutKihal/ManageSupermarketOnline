{% extends "owner/base.html" %}
{% block content %}
	<div class="parent">
		<div class="child">
			<div>
				<h2 style="font-family:Helvetica;">Inventory</h2>
			</div>
			<input id="log-entry" name="Search" type="text"/>
			<button class="btn">Search</button>
			<table id="inventory">
				<tr id="inventory">
					<th id="inventory">ID</th>
					<th id="inventory">TITLE</th>
					<th id="inventory">TYPE</th>
					<th id="inventory">PRICE</th>
					<th id="inventory">IN STOCK</th>
				</tr>
				{% for product in products %}
					<tr id="inventory">
						<td id="inventory">{{ product.product_id }}</td>
						<td id="inventory">{{ product.title }}</td>
						<td id="inventory">{{ product.type }}</td>
						<td id="inventory">{{ product.price }}</td>
						<td id="inventory">{{ product.quantity }}</td>
					</tr>
				{% endfor %}
			</table>
		</div>
	</div>

{% endblock content%}